/* agent-42 TUI styles — inspired by claudechic */

/* ── Layout ── */

#chat-view {
    height: 1fr;
    padding: 0 1;
}

#input-container {
    height: auto;
    min-height: 3;
    max-height: 12;
    padding: 0 1;
}

#input {
    min-height: 1;
    max-height: 10;
}

StatusFooter {
    height: 1;
    dock: bottom;
    background: $surface;
    color: $text-muted;
    padding: 0 1;
}

/* ── Messages ── */

ChatMessage {
    width: 1fr;
    height: auto;
    padding: 0 1;
    margin: 0 0 1 0;
}

ChatMessage.user-message {
    border-left: thick $primary;
}

ChatMessage.assistant-message {
    border-left: wide $secondary;
}

/* ── Tools ── */

ToolWidget {
    width: 1fr;
    height: auto;
    margin: 0 0 1 0;
    border-left: wide $panel;
    padding: 0 1;
}

ToolWidget .tool-header {
    height: auto;
    width: 1fr;
    color: $text-muted;
}

ToolWidget .tool-header:hover {
    color: $text;
}

ToolWidget .tool-body-text {
    height: auto;
    width: 1fr;
    padding: 0 0 0 2;
    display: none;
}

ToolWidget.expanded .tool-body-text {
    display: block;
}

ToolWidget.pending .tool-header {
    color: $warning;
}

ToolWidget.completed .tool-header {
    color: $text-muted;
}

ToolWidget.error .tool-header {
    color: $error;
}

/* ── Thinking ── */

ThinkingIndicator {
    height: auto;
    padding: 0 1;
    margin: 0 0 1 0;
    color: $text-muted;
}

/* ── Provider Picker ── */

#provider-picker {
    align: center middle;
    width: 100%;
    height: 100%;
}

#provider-picker-box {
    width: 40;
    height: auto;
    border: round $primary;
    padding: 1 2;
}

#provider-picker-box Label {
    width: 100%;
    text-align: center;
    margin: 0 0 1 0;
}

#provider-picker-box Button {
    width: 100%;
    margin: 0 0 0 0;
}

/* ── Scrollbar ── */

VerticalScroll > .scrollbar {
    width: 1;
}
